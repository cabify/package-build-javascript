{
  "name": "@cabify/package-build",
  "version": "0.0.2",
  "description": "Common configuration & scripts for building TS packages with rollup",
  "license": "Apache-2.0",
  "main": "build.js",
  "module": "build.js",
  "bin": {
    "package-build": "./bin/runner.js"
  },
  "scripts": {
    "test": "npm run lint:check && npm run format:check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publish:major": "npm version major",
    "publish:minor": "npm version minor",
    "publish:patch": "npm version patch",
    "publish:canary": "npm version prerelease"
  },
  "keywords": [
    "typescript",
    "rollup",
    "babel",
    "bundler"
  ],
  "dependencies": {
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-image": "^2.0.6",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "cross-spawn": "^7.0.3",
    "minimist": "^1.2.5",
    "node-typescript-compiler": "^2.2.1",
    "rollup": "^2.41.4",
    "rollup-plugin-command": "^1.1.3",
    "rollup-plugin-ignore-import": "^1.3.2",
    "rollup-pluginutils": "^2.8.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@cabify/babel-preset": "0.0.2",
    "@cabify/eslint-config": "1.0.2",
    "all-contributors-cli": "6.20.0",
    "eslint": "8.11.0",
    "eslint-import-resolver-typescript": "2.7.0",
    "prettier": "2.6.1",
    "typescript": "4.6.3"
  },
  "peerDependencies": {
    "typescript": ">= 3.7"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "publishConfig": {
    "access": "public"
  }
}
